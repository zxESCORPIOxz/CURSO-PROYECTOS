<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/contenedorMensaje"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"><!--"@drawable/item"-->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:background="@drawable/item">
        <TextView
            android:id="@+id/Nombreitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/font_2"
            android:textStyle="bold"
            android:textColor="@color/colorBlanco"
            android:text="Nombre" />

        <TextView
            android:id="@+id/Contenidoitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:gravity="center_vertical"
            android:text="mensaje"
            android:textColor="@color/colorBlanco"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Fechaitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:textColor="@color/colorBlanco"
                android:textAlignment="viewEnd"
                android:text="Fecha" />
            <ImageView
                android:id="@+id/leidoitem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_leido"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>