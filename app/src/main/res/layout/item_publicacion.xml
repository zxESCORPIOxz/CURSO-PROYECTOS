<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/item"><!--"@drawable/item"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagePublicacion"
            android:src="@drawable/ic_papa_res"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="2dp"
            android:layout_marginRight="5dp"
            app:civ_border_color="@color/colorAmarillo"
            app:civ_border_overlay="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Variedaditem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/font_2"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlanco"
                    android:textAlignment="center"
                    android:text="Variedad" />
                <TextView
                    android:id="@+id/Notificacionesitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlanco"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/ic_notificaciones"
                    android:text="0"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="15dp"
                    android:textColor="@color/colorBlanco"
                    android:textAlignment="viewEnd"
                    android:text="@string/txtcantidad" />
                <TextView
                    android:id="@+id/Cantidaditem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingLeft="15dp"
                    android:layout_marginVertical="15dp"
                    android:textColor="@color/colorBlanco"
                    android:textAlignment="viewStart"
                    android:text="Cantidad" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlanco"
                    android:textAlignment="viewEnd"
                    android:text="@string/txtprecio" />
                <TextView
                    android:id="@+id/Precioitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingLeft="15dp"
                    android:textColor="@color/colorBlanco"
                    android:textAlignment="viewStart"
                    android:text="Precio" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlanco"
        android:textAlignment="viewStart"
        android:text="@string/txtdescripcion" />
    <TextView
        android:id="@+id/Descripcionitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginVertical="10dp"
        android:padding="5dp"
        android:textColor="@color/colorBlanco"
        android:textAlignment="viewStart"
        android:text="Descripcion" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlanco"
            android:textAlignment="viewStart"
            android:text="@string/txtfecha" />
        <TextView
            android:id="@+id/fechaitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlanco"
            android:textAlignment="center"
            android:text="fecha" />
    </LinearLayout>
</LinearLayout>